		    missingMessage:'请输入姓名',
		                    });
		$("#pb").passwordbox({
		 	prompt: 'Password', 
             showEye: true, 
		                     }); 

		$("#sub").click(function(){
			$.ajax({
				url:'${pageContext.request.contextPath }/user/login.do',
				type:'post',
				data:{name:$('#un').val(),password:$('#pb').val()},
				success:function(){alert("成功")},
				error:function(code){console(code)}
			});
		})
		                
		});
		
